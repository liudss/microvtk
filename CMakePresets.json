{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "MICROVTK_BUILD_TESTS": "ON",
        "MICROVTK_BUILD_EXAMPLES": "ON",
        "MICROVTK_BUILD_BENCHMARKS": "ON",
        "MICROVTK_USE_ZLIB": "ON",
        "MICROVTK_USE_LZ4": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (Ninja)",
      "description": "Debug build with tests and examples enabled",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release (Ninja)",
      "description": "Release build with optimizations, tests and examples enabled",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage (GCC/Clang)",
      "description": "Debug build with coverage instrumentation",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-O0 -g --coverage",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "description": "Debug build using MSVC generator",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "MICROVTK_BUILD_TESTS": "ON",
        "MICROVTK_BUILD_EXAMPLES": "ON",
        "MICROVTK_BUILD_BENCHMARKS": "ON",
        "MICROVTK_USE_ZLIB": "ON",
        "MICROVTK_USE_LZ4": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "coverage",
      "configurePreset": "coverage"
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    }
  ],
  "testPresets": [
    {
      "name": "all-tests",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "msvc-tests",
      "configurePreset": "msvc-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
